@model MyShopLucri.Context.tbl_Customers
@{
    ViewBag.Title = "Customer";
}

@using (Html.BeginForm("AddCustomer", "Customer", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            <label>Customer Number</label>
            @Html.TextBoxFor(x => x.CustomerID, new { @class = "form-group" })
        </div>

        <div class="form-group">
            <label>FirstName</label>
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-group" })
        </div>
        <div class="form-group">
            <label>Surname</label>
            @Html.TextBoxFor(x => x.Surname, new { @class = "form-group" })
        </div>
        <div class="form-group">
            <label>Phone</label>
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-group" })
        </div>
        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-group" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-danger">Cancel</button>
        </div>
    </div>
}
