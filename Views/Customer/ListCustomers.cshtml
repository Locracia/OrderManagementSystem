@model List<MyShopLucri.Context.tbl_Customers>
@{
    ViewBag.Title = "ListCustomers";
}


<table class="table table-hover">
    <tr>
        <th>FirstName</th>
        <th>Surname</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Action</th>
    
    @foreach (var item in Model )
    {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.Surname</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>

            <td>
                <a href="#" class="btn btn-success"></a>
                <a href="@Url.Action("Delete", new {item.CustomerID})" class="btn btn-danger"></a>
            </td>
        </tr>
    }
</table>

